<resources>

    <style name="OrangeAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/yellow_status</item>
    </style>

    <style name="OrangeActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/yellow_status</item>
        <item name="android:actionBarSize">@dimen/actionbar_size</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!--NoTitleFullScreen-->
    <style name="NoTitleFullScreen" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light"></style>

    <style name="BaseTitleActionBar" parent="Base.Theme.AppCompat.Light"></style>

    <!--Orange_titlebar-->
    <style name="OrangeTitleBar" parent="Base.V7.Theme.AppCompat.Light">
        <item name="android:background">@color/orange_stroke</item>
        <item name="android:textSize">14sp</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--MainHomeProcessBar-->
    <style name="SelfProgressBarStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:minWidth">16dp</item>
        <item name="android:maxWidth">16dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="DialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
