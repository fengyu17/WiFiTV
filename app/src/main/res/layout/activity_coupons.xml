<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_titlebar" />

    <com.geeya.wifitv.widget.PagerSlidingCouponsTabStrip
        android:id="@+id/coupons_tab"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/program_navigationbar_background"
        app:dividerWidth="0dp"
        app:indicatorColor="@color/orange"
        app:indicatorHeight="2dp"
        app:single="true"
        app:tabWidth="180dp"
        app:underlineHeight="1dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/coupons_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coupons_tab" />


</LinearLayout>
