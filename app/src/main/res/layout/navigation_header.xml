<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@android:color/holo_orange_light">

    <com.geeya.wifitv.widget.CircleImageView
        android:id="@+id/nh_circleimage"
        android:layout_width="@dimen/userinfo_circleimage_size"
        android:layout_height="@dimen/userinfo_circleimage_size"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/userinfo_circleimage_margin"
        android:layout_marginStart="@dimen/userinfo_circleimage_margin"
        android:src="@mipmap/userinfo_headpicture"
        app:border_color="@color/orange"
        app:border_width="2dp" />

    <TextView
        android:id="@+id/header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:text="FenGyu17@gmail.com"
        android:textColor="#ffffff"
        android:textSize="14sp" />
</RelativeLayout>