<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/tab_image_height"
        android:layout_height="@dimen/tab_image_height"
        android:focusable="false"
        android:src="@mipmap/maintab_home_nor" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页"
        android:textColor="@drawable/maintab_text_selector"
        android:textSize="@dimen/tab_text_textsize" />

</LinearLayout>
