<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_detail_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingEnd="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingStart="10dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/iv_moviepic"
            android:layout_width="144dp"
            android:layout_height="190dp"
            android:background="@drawable/activity_programdetail_iv_bg"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/activity_programdetail_moviepic" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/iv_moviepic"
            android:layout_toRightOf="@id/iv_moviepic"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textScaleX="1.2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/iv_moviepic"
            android:layout_toRightOf="@id/iv_moviepic"
            android:paddingBottom="4dp"
            android:textColor="@color/gray_text_movie"
            android:textScaleX="1.2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_director"
            android:layout_alignStart="@id/tv_director"
            android:layout_below="@id/tv_director"
            android:paddingBottom="4dp"
            android:textColor="@color/gray_text_movie"
            android:textScaleX="1.2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_describle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_actor"
            android:layout_alignStart="@id/tv_actor"
            android:layout_below="@id/tv_actor"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:lines="5"
            android:textColor="@color/black"
            android:textScaleX="1.2"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_dividingline" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="剧集"
        android:textColor="@color/orange"
        android:textSize="20sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@mipmap/activity_programdetail_dividline" />

    <GridView
        android:id="@+id/gv_episode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:numColumns="5"
        android:scrollbars="none" />

</LinearLayout>