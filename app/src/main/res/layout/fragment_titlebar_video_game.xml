<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/orange" >

    <RadioGroup
        android:id="@+id/rg_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="10dp"
        android:checkedButton="@+id/button1"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_left"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/activity_title_bt_left"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:textColor="@drawable/fragment_titlebar_radiobutton_textcolor_selector" />

        <RadioButton
            android:id="@+id/rb_right"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/activity_title_bt_right"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/fragment_titlebar_radiobutton_textcolor_selector" />
    </RadioGroup>

</FrameLayout>